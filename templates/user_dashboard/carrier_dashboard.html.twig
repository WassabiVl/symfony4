                            <div class="tooltip-fab">
                                <span>{{ 'dashboard.plan_preview'|trans([], 'FOSUserBundle') }}</span>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}