            <div class="column carrier-preview-order table-item">
                <span>NKA25896</span>
            </div>
            <div class="column carrier-preview-product table-item">
                <span>Illum</span>
            </div>
            <div class="column carrier-preview-producer table-item">
                <span>Blue Kreis Pharma</span>
                <span>Industriestraße 85</span>
                <span>30159 Hannover</span>
            </div>
            <div class="column carrier-preview-requested-amount table-item">
                <span>1050 Units</span>
            </div>
            <div class="column carrier-preview-customer table-item">
                <span>Dr. Wolfgang Kaiser</span>
                <span>Krankenhausstraße 67</span>
                <span>50674 Köln</span>
            </div>
            <div class="column carrier-preview-distance table-item">
                <span>1058 Units</span>
            </div>
        </div>
    {% endfor %}
        <div class="column carrier-preview-map map">
            <span class="distance-total">Total: 250KM</span>
            <div class="carrier-preview-back">
                <a class="flat no-border button" href="#">zurück zur Bestellungen</a>
            </div>
        </div>
</div>
