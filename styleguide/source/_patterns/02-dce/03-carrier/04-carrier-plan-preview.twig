<div class="fragment carrier-plan-preview">
            <div class="column column-95 carrier-plan-table-wrapper table-row">
                <div class="column carrier-preview-place table-top-bar-item">
                    <span>Ort</span>
                </div>
                <div class="column carrier-preview-order table-top-bar-item">
                    <span>Bestell-Nr</span>
                </div>
                <div class="column carrier-preview-product table-top-bar-item">
                    <span>Produkt</span>
                </div>
                <div class="column carrier-preview-producer table-top-bar-item">
                    <span>Produzent</span>
                </div>
                <div class="column carrier-preview-requested-amount table-top-bar-item">
                    <span>Bestellmenge</span>
                </div>
                <div class="column carrier-preview-customer table-top-bar-item">
                    <span>Kundenadresse</span>
                </div>
                <div class="column carrier-preview-distance table-top-bar-item">
                    <span>Entfernung</span>
                </div>
             </div>
